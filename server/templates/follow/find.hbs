<div class="container">

  <ul class="nav nav-tabs">
    {{#if req.we.plugins.we-plugin-notification}}
    <li role="presentation"><a href="/notification">
      <span class="glyphicon glyphicon-bell"></span> {{t 'notification.find'}}
    </a></li>
    {{/if}}
    <li role="presentation" class="active"><a href="/follow">
      <span class="glyphicon glyphicon-eye-open"></span> {{t 'notification.follow'}}
    </a></li>
    {{#if req.we.plugins.we-plugin-notification}}
    <li role="presentation"><a href="/notification-settings">
      <span class="glyphicon glyphicon-cog"></span> {{t 'notification.user.settings'}}
    </a></li>
    {{/if}}
  </ul>

  <br>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>{{t 'title'}}</th>
        <th>{{t 'type'}}</th>
        <th>{{t 'actions'}}</th>
      </tr>
    </thead>
    <tbody>

  {{#each data}}
    <tr>
      <td>{{relatedTitleField}}</td>
      <td>{{model}}</td>
      <td>
        <a href="/{{model}}/{{modelId}}" target="_blank" class="btn btn-sm btn-default">{{t 'view'}}</a>
        <div style="display: inline-table;">
        {{{flag-follow modelName=model modelId=modelId isFollowing=this locals=.. }}}
        </div>
      </td>
    </tr>
  {{/each}}

    </tbody>
    <tfoot>
      <td colspan="3">
        {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}      </td>
    </tfoot>
  </table>
</div>